%header.sticky.top-0
  %div{data: { controller: 'header-blog' }}
    .h-8.flex.bg-gray-800.duration-700{ data: { 'header-blog-target': 'microHeader' } }
      .container.mx-auto
        .flex.items-center


  .z-50.h-20.items-center.flex.bg-white.w-full.shadow-lg
    .container.mx-auto
      .grid.grid-cols-2.h-full.md:grid-cols-3
        .flex.items-end
          = link_to root_path, class: "w-full" do
            = image_tag "logo.png", class: "h-14 w-auto -mt-8"

        .flex.items-end.justify-center.h-full.hidden.md:block
          - categories = Category.all.sample(5)
          - categories.each do |category|
            = link_to category.name, category_path(category), class: "text-gray-600 focus:outline-none text-xl font-medium rounded-lg pr-2 py-2.5 me-1 mb-2 hover:text-primary-600"

        .flex.items-end.justify-end
          = link_to t("shared.learn_more"), nil, class: "text-gray-500 hover:underline underline-offset-1 focus:outline-none font-medium rounded-lg text-sm px-2 py-2.5 me-1.5 mb-2"